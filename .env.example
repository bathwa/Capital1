# Backend API Configuration
VITE_API_BASE_URL=https://api.abathwa.com
VITE_API_TIMEOUT=30000

# Application Environment
VITE_APP_ENV=production
VITE_ENABLE_ANALYTICS=true

# Security
VITE_CSRF_TOKEN_HEADER=X-CSRF-TOKEN

# Localization
VITE_DEFAULT_LANGUAGE=en
VITE_SUPPORTED_LANGUAGES=en,nd

# File Upload
VITE_MAX_FILE_SIZE=10485760
VITE_ALLOWED_FILE_TYPES=pdf,doc,docx,jpg,jpeg,png

# Payment Processing (when needed)
VITE_STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_key

# Third-party Services (when needed)
VITE_CLOUDINARY_CLOUD_NAME=your_cloudinary_name

# Monitoring (when needed)
VITE_SENTRY_DSN=your_sentry_dsn_here
VITE_GOOGLE_ANALYTICS_ID=your_ga_id_here